.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding 0 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 2px 0
  &.tip
    background-color #f3f5f7
    border-color #42b983
    .custom-block-title
      display none
    p
      line-height: 1.2
      padding 5px 0
  &.warning
    background-color rgba(255,229,100,.3)
    border-color darken(#ffe564, 35%)
    color darken(#ffe564, 70%)
    .custom-block-title
      color darken(#ffe564, 50%)
      display none
    p
      line-height: 1.2
      padding 5px 0
    a
      color $textColor
  &.danger
    background-color #ffe6e6
    border-color darken(red, 20%)
    color darken(red, 70%)
    .custom-block-title
      color darken(red, 40%)
      display none
    p
      line-height: 1.2
      padding 5px 0
    a
      color $textColor
  &.details
    display block
    position relative
    border-radius 2px
    margin 0.5em 0
    padding 1em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
