.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding 0 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 2px 0
  &.tip
    background-color #f3f5f7
    border-color #42b983
    .custom-block-title
      display none
    p
      line-height: 1.2
      padding 5px 0
  &.warning
    background-color rgba(255,229,100,.3)
    border-color darken(#ffe564, 35%)
    color darken(#ffe564, 70%)
    .custom-block-title
      color darken(#ffe564, 50%)
      display none
    p
      line-height: 1.2
      padding 5px 0
    a
      color $textColor
  &.danger
    background-color #ffe6e6
    border-color darken(red, 20%)
    color darken(red, 70%)
    .custom-block-title
      color darken(red, 40%)
      display none
    p
      line-height: 1.2
      padding 5px 0
    a
      color $textColor
  &.details
    display block
    position relative
    border-radius 2px
    margin 0.5em 0
    padding 1em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer   
  &.col-1, &.col-2, &.col-3, &.col-4, &.col-5, &.col-6, &.col-7, &.col-8, &.col-9, &.col-10, &.col-11, &.col-12
    display inline-block
    box-sizing border-box
    padding 1em
    summary
      outline none
      margin 0
      padding 0
      font-weight blod
      border-bottom #eee 1px solid
      &:before
        content 'â–ˆ '
  &.col-1
    width 8%  
  &.col-2
    width 16%  
  &.col-3
    width 24%  
  &.col-4
    width 33%  
  &.col-5
    width 41%  
  &.col-6
    width 49%  
  &.col-7
    width 58%  
  &.col-8
    width 66%  
  &.col-9
    width 74%  
  &.col-10
    width 83%  
  &.col-11
    width 91%  
  &.col-12
    width 100%

    
