.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding 0 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 2px 0
  &.tip
    background-color #f3f5f7
    border-color #42b983
    .custom-block-title
      display none
    p
      line-height: 1.2
      padding 5px 0
  &.warning
    background-color rgba(255,229,100,.3)
    border-color darken(#ffe564, 35%)
    color darken(#ffe564, 70%)
    .custom-block-title
      color darken(#ffe564, 50%)
      display none
    p
      line-height: 1.2
      padding 5px 0
    a
      color $textColor
  &.danger
    background-color #ffe6e6
    border-color darken(red, 20%)
    color darken(red, 70%)
    .custom-block-title
      color darken(red, 40%)
      display none
    p
      line-height: 1.2
      padding 5px 0
    a
      color $textColor
  &.details
    display block
    position relative
    border-radius 2px
    margin 0.2em 0
    padding 0.3em 1em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer   
  &.col-1, &.col-2, &.col-3, &.col-4, &.col-5, &.col-6, &.col-7, &.col-8, &.col-9, &.col-10, &.col-11, &.col-12
    display inline-block
    box-sizing border-box
    padding 1em
    summary
      outline none
      margin 0
      padding 0
      font-weight blod
      border-bottom #eee 1px solid
      &:before
        content '█ '
  &.col-1
    width 8%  
  &.col-2
    width 16%  
  &.col-3
    width 24%  
  &.col-4
    width 33%  
  &.col-5
    width 41%  
  &.col-6
    width 49%  
  &.col-7
    width 58%  
  &.col-8
    width 66%  
  &.col-9
    width 74%  
  &.col-10
    width 83%  
  &.col-11
    width 91%  
  &.col-12
    width 100%

.format-block
    color:#ccc 
    i
        font-weight bold
        position relative
    .i0
        color #333
    .i1, .order1
        color #eb9b00  
    .i2, .order2
        color #00cf00
    .i3, .order3
        color #009ceb
    .i4, .order4
        color #a523e8
    .i5, .order5
        color #ff3a3a 
    .i6, .order6
        color #7bbb00
    .i7, .order7
        color #00c381 
    .i8, .order8
        color #5454ff 
    .i9, .order9
        color #ec33ae
    .order1::before, .order2::before, .order3::before, .order4::before, .order5::before, 
    .order6::before, .order7::before, .order8::before, .order9::before        
        position absolute
        top -2px
        left -10px
        font-size 18px
        line-height 18px
        vertical-align middle
    .order1::before
        content '❶'
    .order2::before
        content '❷'
    .order3::before
        content '❸'
    .order4::before
        content '❹'
    .order5::before
        content '❺'
    .order6::before
        content '❻'
    .order7::before
        content '❼'
    .order8::before
        content '❽'
    .order9::before
        content '❾'